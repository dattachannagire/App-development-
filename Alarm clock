## pubspec.yaml (dependencies)
```yaml
name: alarm_clock_app
description: A simple Alarm Clock demo
publish_to: 'none'
version: 1.0.0+1

environment:
  sdk: '>=2.18.0 <3.0.0'

dependencies:
  flutter:
    sdk: flutter
  shared_preferences: ^2.0.15
  flutter_local_notifications: ^17.0.0
  audioplayers: ^5.2.0

dev_dependencies:
  flutter_test:
    sdk: flutter

flutter:
  uses-material-design: true
  assets:
    - assets/alarm1.mp3
    - assets/alarm2.mp3
    - assets/alarm3.mp3
```

---

## lib/main.dart
```dart
import 'dart:convert';
import 'package:flutter/material.dart';
import 'package:shared_preferences/shared_preferences.dart';
import 'package:flutter_local_notifications/flutter_local_notifications.dart';
import 'package:audioplayers/audioplayers.dart';

void main() async {
  WidgetsFlutterBinding.ensureInitialized();
  runApp(AlarmApp());
}

class AlarmApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'Alarm Clock',
      debugShowCheckedModeBanner: false,
      theme: ThemeData(primarySwatch: Colors.deepPurple),
      home: HomeScreen(),
    );
  }
}

class AlarmModel {
  String time;   // e.g., "07:30"
  bool enabled;
  String sound;
  AlarmModel({required this.time, required this.enabled, required this.sound});

  Map<String, dynamic> toJson() => {
        'time': time,
        'enabled': enabled,
        'sound': sound,
      };

  factory AlarmModel.fromJson(Map<String, dynamic> json) => AlarmModel(
        time: json['time'],
        enabled: json['enabled'],
        sound: json['sound'],
      );
}

class HomeScreen extends StatefulWidget {
  @override
  State<HomeScreen> createState() => _HomeScreenState();
}

class _HomeScreenState extends State<HomeScreen> {
  List<AlarmModel> alarms = [];
  final String storageKey = 'alarm_list_v1';
  late FlutterLocalNotificationsPlugin notifications;

  @override
  void initState() {
    super.initState();
    _initializeNotifications();
    _loadAlarms();
  }

  Future<void> _initializeNotifications() async {
    notifications = FlutterLocalNotificationsPlugin();

    const android = AndroidInitializationSettings('@mipmap/ic_launcher');
    const settings = InitializationSettings(android: android);

    await notifications.initialize(settings,
        onDidReceiveNotificationResponse: (details) {
      Navigator.push(
          context, MaterialPageRoute(builder: (_) => AlarmRingingScreen(sound: 'assets/alarm1.mp3')));
    });
  }

  Future<void> _loadAlarms() async {
    final prefs = await SharedPreferences.getInstance();
    final list = prefs.getStringList(storageKey) ?? [];
    alarms = list.map((e) => AlarmModel.fromJson(jsonDecode(e))).toList();
    setState(() {});
  }

  Future<void> _saveAlarms() async {
    final prefs = await SharedPreferences.getInstance();
    prefs.setStringList(
        storageKey, alarms.map((e) => jsonEncode(e.toJson())).toList());
  }

  void _addAlarm() async {
    final result = await Navigator.push(
        context, MaterialPageRoute(builder: (_) => AddAlarmScreen()));

    if (result != null) {
      alarms.add(result);
      _saveAlarms();
      setState(() {});
    }
  }

  @override
  Widget build(BuildContext context) {
    final now = DateTime.now();

    return Scaffold(
      appBar: AppBar(title: Text("Alarm Clock")),
      floatingActionButton: FloatingActionButton(
        onPressed: _addAlarm,
        child: Icon(Icons.add),
      ),
      body: Column(
        children: [
          Container(
            padding: EdgeInsets.all(20),
            child: Column(
              children: [
                Text(
                  "${now.hour.toString().padLeft(2, '0')}:${now.minute.toString().padLeft(2, '0')}",
                  style: TextStyle(fontSize: 52, fontWeight: FontWeight.bold),
                ),
                Text(
                  "${now.day}-${now.month}-${now.year}",
                  style: TextStyle(fontSize: 18),
                )
              ],
            ),
          ),

          Divider(),

          Expanded(
            child: alarms.isEmpty
                ? Center(child: Text("No alarms added."))
                : ListView.builder(
                    itemCount: alarms.length,
                    itemBuilder: (context, i) {
                      final alarm = alarms[i];
                      return ListTile(
                        title: Text(alarm.time,
                            style: TextStyle(fontSize: 22)),
                        subtitle: Text("Tone: ${alarm.sound.split('/').last}"),
                        trailing: Switch(
                          value: alarm.enabled,
                          onChanged: (v) {
                            setState(() => alarm.enabled = v);
                            _saveAlarms();
                          },
                        ),
                      );
                    }),
          )
        ],
      ),
    );
  }
}

class AddAlarmScreen extends StatefulWidget {
  @override
  _AddAlarmScreenState createState() => _AddAlarmScreenState();
}

class _AddAlarmScreenState extends State<AddAlarmScreen> {
  TimeOfDay selectedTime = TimeOfDay.now();
  String chosenSound = 'assets/alarm1.mp3';

  void pickTime() async {
    final t = await showTimePicker(context: context, initialTime: selectedTime);
    if (t != null) setState(() => selectedTime = t);
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(title: Text("Add Alarm")),
      body: Padding(
        padding: const EdgeInsets.all(20.0),
        child: Column(
          crossAxisAlignment: CrossAxisAlignment.start,
          children: [
            ElevatedButton(
              onPressed: pickTime,
              child: Text("Pick Time: ${selectedTime.hour}:${selectedTime.minute.toString().padLeft(2, '0')}"),
            ),

            SizedBox(height: 20),
            Text("Select Alarm Tone", style: TextStyle(fontSize: 16)),
            RadioListTile(
                title: Text("Alarm Tone 1"),
                value: 'assets/alarm1.mp3',
                groupValue: chosenSound,
                onChanged: (v) => setState(() => chosenSound = v!)),
            RadioListTile(
                title: Text("Alarm Tone 2"),
                value: 'assets/alarm2.mp3',
                groupValue: chosenSound,
                onChanged: (v) => setState(() => chosenSound = v!)),
            RadioListTile(
                title: Text("Alarm Tone 3"),
                value: 'assets/alarm3.mp3',
                groupValue: chosenSound,
                onChanged: (v) => setState(() => chosenSound = v!)),

            Spacer(),
            ElevatedButton(
              onPressed: () {
                final formatted =
                    "${selectedTime.hour.toString().padLeft(2, '0')}:${selectedTime.minute.toString().padLeft(2, '0')}";
                final model = AlarmModel(
                    time: formatted, enabled: true, sound: chosenSound);
                Navigator.pop(context, model);
              },
              child: Center(child: Text("SAVE ALARM")),
              style: ElevatedButton.styleFrom(minimumSize: Size(double.infinity, 50)),
            )
          ],
        ),
      ),
    );
  }
}

// Alarm Ringing Screen
class AlarmRingingScreen extends StatefulWidget {
  final String sound;
  AlarmRingingScreen({required this.sound});

  @override
  _AlarmRingingScreenState createState() => _AlarmRingingScreenState();
}

class _AlarmRingingScreenState extends State<AlarmRingingScreen> {
  AudioPlayer player = AudioPlayer();

  @override
  void initState() {
    super.initState();
    player.play(AssetSource(widget.sound.replaceFirst('assets/', '')));
  }

  @override
  void dispose() {
    player.stop();
    super.dispose();
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      backgroundColor: Colors.red.shade50,
      body: Center(
        child: Column(
          mainAxisAlignment: MainAxisAlignment.center,
          children: [
            Icon(Icons.alarm, size: 100, color: Colors.red),
            SizedBox(height: 20),
            Text("Alarm Ringing!", style: TextStyle(fontSize: 28)),
            SizedBox(height: 40),
            ElevatedButton(onPressed: () {
              Navigator.pop(context);
            }, child: Text("DISMISS")),
            SizedBox(height: 20),
            OutlinedButton(onPressed: () {}, child: Text("SNOOZE 5 MIN")),
          ],
        ),
      ),
    );
  }
}
```

